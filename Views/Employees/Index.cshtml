@model IEnumerable<EmployeeTaskManager.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Employees</h1>
    <a class="btn btn-primary" asp-action="Create">+ Add Employee</a>
</div>

<form method="get" class="row mb-3">
    <div class="col-md-4">
        <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Search by name or department" />
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-outline-secondary">Search</button>
    </div>
</form>

<table class="table table-striped table-bordered align-middle">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().Name)</th>
            <th>@Html.DisplayNameFor(m => m.First().Email)</th>
            <th>@Html.DisplayNameFor(m => m.First().Department)</th>
            <th>@Html.DisplayNameFor(m => m.First().DateOfJoining)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Department</td>
            <td>@item.DateOfJoining.ToShortDateString()</td>
            <td class="text-end">
                <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
