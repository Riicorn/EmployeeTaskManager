@model IEnumerable<EmployeeTaskManager.Models.TaskItem>
    @using EmployeeTaskManager.Models

    @{
    ViewData["Title"] = "Dashboard";
    }

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <h2 class="mb-4">Dashboard</h2>

    <div class="row g-3 mb-4">
        @if (User.IsInRole("Admin"))
    {
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <i class="bi bi-people-fill fs-1 text-primary me-3"></i>
                    <div>
                        <div class="text-muted small">Total Employees</div>
                        <div class="fs-3 fw-bold">@ViewBag.TotalEmployees</div>
                    </div>
                </div>
            </div>
        </div>
    }

        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <i class="bi bi-list-task fs-1 text-info me-3"></i>
                    <div>
                        <div class="text-muted small">Total Tasks</div>
                        <div class="fs-3 fw-bold">@ViewBag.TotalTasks</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <i class="bi bi-hourglass-split fs-1 text-warning me-3"></i>
                    <div>
                        <div class="text-muted small">Pending</div>
                        <div class="fs-3 fw-bold text-warning">@ViewBag.PendingTasks</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <i class="bi bi-arrow-repeat fs-1 text-secondary me-3"></i>
                    <div>
                        <div class="text-muted small">In Progress</div>
                        <div class="fs-3 fw-bold text-secondary">@ViewBag.InProgressTasks</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <i class="bi bi-check-circle-fill fs-1 text-success me-3"></i>
                    <div>
                        <div class="text-muted small">Completed</div>
                        <div class="fs-3 fw-bold text-success">@ViewBag.CompletedTasks</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white">
            <h5 class="mb-0">Recent Tasks</h5>
        </div>

        <div class="card-body p-0">
            @if (!Model.Any())
        {
            <p class="p-3 text-muted mb-0">No tasks found.</p>
        }
        else
        {
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Employee</th>
                        <th>Due</th>
                        <th>Status</th>
                        <th class="text-end">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
{
    string badgeClass = item.Status switch
    {
        EmployeeTaskManager.Models.TaskStatus.Pending => "bg-warning text-dark",
        EmployeeTaskManager.Models.TaskStatus.InProgress => "bg-info text-dark",
        EmployeeTaskManager.Models.TaskStatus.Completed => "bg-success",
        _ => "bg-secondary"
    };

    string priorityClass = item.Priority switch
    {
        EmployeeTaskManager.Models.TaskPriority.High => "bg-danger",
        EmployeeTaskManager.Models.TaskPriority.Medium => "bg-warning text-dark",
        EmployeeTaskManager.Models.TaskPriority.Low => "bg-secondary",
        _ => "bg-dark"
    };
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Employee?.Name</td>
                        <td>@(item.DueDate?.ToShortDateString() ?? "-")</td>
                        <td><span class="badge @badgeClass">@item.Status</span></td>
                        <td><span class="badge @priorityClass">@item.Priority</span></td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary"
                               asp-controller="Tasks"
                               asp-action="Details"
                               asp-route-id="@item.Id">
                                Details
                            </a>

                        </td>
                    </tr>
}

                </tbody>
            </table>
        }
        </div>
    </div>

    <div class="d-flex gap-2">
        @if (User.IsInRole("Admin"))
    {
        <a class="btn btn-primary" asp-controller="Employees" asp-action="Index">
            <i class="bi bi-people-fill me-1"></i> Employees
        </a>
    }
        <a class="btn btn-outline-primary" asp-controller="Tasks" asp-action="Index">
            <i class="bi bi-list-task me-1"></i> Tasks
        </a>
    </div>
